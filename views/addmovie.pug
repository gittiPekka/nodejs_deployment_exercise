doctype html
html
  head
    title Add movie
    link(rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous")

  body(style='margin-top: 20px;margin-left: 40px;')

      h1 New movie
      form(action='/addmovie', method='POST')
        div
          input(type="text", name="title", placeholder="Title", style="margin-bottom: 15px;width: 500px;")
        div
          input(type="text", name="director", placeholder="Director", style="margin-bottom: 15px;width: 500px;")
        div
          input(type="number", name="year", placeholder="Year", style="margin-bottom: 15px;width: 500px;")
        div
          input(type="submit", value="Add").btn.btn-primary